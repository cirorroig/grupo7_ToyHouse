<!DOCTYPE html>
<html lang="en">   
    <%- include("./partials/head")%>
    
   
<body>
    <%- include("./partials/header")%>
    <main class="home-page">
        <h1 style="text-align: center;" >¡NOVEDADES!</h1>
            
        <div class="carrusel">
          <div class="grande">
            <img src="../images/5fa3dda54689f.jpeg" alt="Imagen 1" class="carrusel-img">
            <img src="../images/1_10.jpg%>" alt="Imagen 2" class="carrusel-img">
            <img src="../images/monopoly-madness-hero-keyart-v1.png%>" alt="Imagen 3" class="carrusel-img">
          </div>

          <ul class="puntos">
              <li class="punto punto-activo"></li>
              <li class="punto"></li>
              <li class="punto"></li>
          </ul>
        </div>

        <section class="our-products">
           <h2 class="products">Nuestros productos</h2>
           <% for(let i=0;i<4;i++) {%>
            <article class="product">
                <div class="image">
                    <a href="/products/<%=products[i].id_producto%>">
                    <img src="../images/Products/<%=products[i].image%>" alt="product">
                    </a>
                </div>
                <div class="description">
                    <p class="product-name"><%=products[i].name%></p>
                    <div class="brand">
                        <p><%=products[i].description%></p>
                    </div>
                    <div class="price">
                        <p>$<%=products[i].price%></p>
                </div>
                </div> 
                <div class="buy-button">
                    <a href="/products/<%=products[i].id_producto%>"><button type="submit" class="buy">Detalle</button></a>
                </div>
            </article> 
            <%}%>     
                    
        </section>
    </section>
    <section class="our-products">
       <h2 class="products">¡Ofertas!</h2>
       <% for(let i=4;i<8;i++) {%>
        <article class="product">
            <div class="image">
                <a href="/products/<%=products[i].id%>">
                <img src="../images/Products/<%=products[i].image%>" alt="product">
                <i class="fas fa-percent"></i>
                </a>
            </div>
            <div class="description">
                <p class="product-name"><%=products[i].name%></p>
                <div class="brand">
                    <p><%=products[i].description%></p>
                </div>
                <div class="price">
                    <p>$<%=products[i].price%></p>
                    <p> $<%= products[i].price/2 %></p>
            </div>
            </div> 
            <div class="buy-button">
                <a href="/products/<%=products[i].id_producto%>"><button type="submit" class="buy">Detalle</button></a>            
            </div>
        </article> 
        <%}%>     
    </section>
    </main>
        <%- include("./partials/footer")%> 
    <script src="/js/carrusel.js"></script>
</body>
</html>