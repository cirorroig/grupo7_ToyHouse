<!DOCTYPE html>
<html lang="en">   
    <%- include("./partials/head")%>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<body>
    <%- include("./partials/header")%>
    <main class="home-page">
        <h1 style="text-align: center;" >¡NOVEDADES!</h1>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
                <ol class="carousel-indicators">
                  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                  <div class="carousel-item active style="height: 200px;"">
                    <img class="d-block w-100" src="../images/5fa3dda54689f.jpeg" style="height: 600px;">
                  </div>
                  <div class="carousel-item" >
                    <img class="d-block w-100" src="../images/monopoly-madness-hero-keyart-v1.png" alt="Second slide" style="height: 600px;">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="../images/1_10.jpg"  style="height: 600px;">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>

        <section class="our-products">
           <h2 class="products">Nuestros productos</h2>
           <% for(let i=0;i<4;i++) {%>
            <article class="product">
                <div class="image">
                    <a href="/products/<%=products[i].id_producto%>">
                    <img src="../images/Products/<%=products[i].image%>" alt="product">
                    </a>
                </div>
                <div class="description">
                    <p class="product-name"><%=products[i].name%></p>
                    <div class="brand">
                        <p><%=products[i].description%></p>
                    </div>
                    <div class="price">
                        <p>$<%=products[i].price%></p>
                </div>
                </div> 
                <div class="buy-button">
                    <a href="/products/<%=products[i].id_producto%>"><button type="submit" class="buy">Detalle</button></a>
                </div>
            </article> 
            <%}%>     
                    
        </section>
    </section>
    <section class="our-products">
       <h2 class="products">¡Ofertas!</h2>
       <% for(let i=4;i<8;i++) {%>
        <article class="product">
            <div class="image">
                <a href="/products/<%=products[i].id%>">
                <img src="../images/Products/<%=products[i].image%>" alt="product">
                <i class="fas fa-percent"></i>
                </a>
            </div>
            <div class="description">
                <p class="product-name"><%=products[i].name%></p>
                <div class="brand">
                    <p><%=products[i].description%></p>
                </div>
                <div class="price">
                    <p>$<%=products[i].price%></p>
                    <p> $<%= products[i].price/2 %></p>
            </div>
            </div> 
            <div class="buy-button">
                <a href="/products/<%=products[i].id_producto%>"><button type="submit" class="buy">Detalle</button></a>            
            </div>
        </article> 
        <%}%>     
    </section>
    </main>
        <%- include("./partials/footer")%> 
        <%- include("./partials/scripts")%> 
</body>
</html>