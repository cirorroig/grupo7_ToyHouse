<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head")%>
<body>
    <%- include("./partials/header")%>
    <main class="product-list">
        <div class="title">
            <% if (locals.isLogged && locals.userLogged.is_admin==1) { %>
                <a href="/products/create" class="create"><button class="edit">Crear Producto</button></a>
                <% } %> 
            <h1 class="all-products">TODOS NUESTROS PRODUCTOS!</h1>
        </div>
        <section class="our-products">
           <% for(let i=0;i<products.length;i++) {%>
            <article class="product">
                <div class="image">
                    <a href="/products/<%=products[i].id_producto%>">
                    <img src="../images/Products/<%=products[i].image%>" alt="product">
                    </a>
                </div>
                <div class="description">
                    <p class="product-name"><%=products[i].name%></p>
                    <div class="brand">
                        <p><%=products[i].description%></p>
                    </div>
                    <div class="price">
                        <p>$<%=products[i].price%></p>
                </div>
                </div> 
                <div class="buy-button">
                    <a href="/products/<%=products[i].id_producto%>"><button type="submit" class="buy">Detalle</button></a>            
                </div>
            </article>
        <%}%>    
        </section>
    </main> 
    <%- include("./partials/footer")%>
    <%- include("./partials/scripts")%> 
</body>
</html>