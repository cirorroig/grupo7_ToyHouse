<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head")%>
<body>
    <%- include("./partials/header")%>
    <main class="product-list">
        <h1 class="all-products">TODOS NUESTROS PRODUCTOS!</h1>
        <section class="our-products">
           <% for(let i=0;i<products.length;i++) {%>
            <article class="product">
                <div class="image">
                    <a href="/products/<%=products[i].id_producto%>">
                    <img src="../images/Products/<%=products[i].image%>" alt="product">
                    <i class="fas fa-percent"></i>
                    </a>
                </div>
                <div class="description">
                    <p class="product-name"><%=products[i].name%></p>
                    <div class="brand">
                        <p><%=products[i].description%></p>
                    </div>
                    <div class="price">
                        <p>$<%=products[i].price%></p>
                        <p> $<%= products[i].price/2 %></p>
                </div>
                </div> 
                <div class="buy-button">
                    <a href="/cart"><button type="submit" class="buy">Comprar</button></a>
                    <button type="submit" class="cart"><a href="/cart"><i class="fas fa-shopping-cart"></i></a></button>
                </div>
            </article>
        <%}%>    
        </section>
    </main> 
    <%- include("./partials/footer")%>
</body>
</html>